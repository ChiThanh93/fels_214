<% provide :title, t(".word_detail") %>
<h1><%= t ".word-detail" %></h1>
<table class="table table-hover th_word bg-table">
  <thead class="title_table th_word">
    <tr>
      <td><%= t".content"%></td>
      <td><%= t".answer"%></td>
      <td><%= t".category"%></td>
    </tr>
  </thhead>
  <tbody>
    <tr>
      <td>
        <%= @word.content %>
      </td>
      <td>
        <ul>
          <% @answers.each do |answer| %>
            <li>
              <%= answer.content %>
              <% if answer.is_correct %>
                <span class="glyphicon glyphicon-ok"></span>
              <% else %>
                <span class="glyphicon glyphicon-remove"></span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </td>
      <td>
        <%= @word.category_name %>
      </td>
    </tr>
  </tbody>
</table>

