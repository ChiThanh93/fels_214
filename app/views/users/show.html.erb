<% provide(:title, @user.name) %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-3">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <%= render "follow_form" if logged_in? %>
    </aside>
    <aside class="col-md-5">
      <section>
      <h1><%= t ".activities" %></h1>
      <% if @activities.any? %>
        <ul>
          <%= render @activities %>
        </ul>
        <%= link_to t(".more_activities"), activities_path(@user) %>
      <% end %>
    </section>
    </aside>
    <aside class="col-md-4">
      <h2><%= t ".show_results" %></h2>
        <%= render @lessons %>
    </aside>
  </div>
<% end %>
