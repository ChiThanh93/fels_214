<% provide :title, t(".all_categories") %>
<h1><%= t ".all_categories" %></h1>
<div class="row">
  <div class="search-form">
    <%= form_tag users_path, method: :get, id: "search-form" do %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search],
          placeholder: t(".search"), class: "form-control search-field" %>
        <div class="input-group-btn search-btn">
        <%= button_tag type: "submit", class: "btn btn-primary" do %>
          <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
          <span class="label-icon"><%= t ".search" %></span>
        <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="panel-body">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="table-responsive table-condensed">
        <table class="table table-hover th_word bg-table" id="list_category">
          <thead class="title_table th_word">
            <tr>
              <th class="th_index"><%= t ".number" %></th>
              <th class="th_category"><%= t ".name" %></th>
              <th class="th_category"><%= t ".description" %></th>
              <th class="th_category"><%= t ".total" %></th>
              <th class="th_category"><%= t ".action" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @categories %>
          </tbody>
        </table>
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>
