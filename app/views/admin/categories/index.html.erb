<% provide :title, t(".all_categories") %>
<h1><%= t ".all_categories" %></h1>
<div class="row">
  <div class="search-form">
    <%= form_tag users_path, method: :get, id: "search-form" do %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search],
          placeholder: t(".search"), class: "form-control search-field" %>
        <div class="input-group-btn search-btn">
        <%= button_tag type: "submit", class: "btn btn-primary" do %>
          <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
          <span class="label-icon"><%= t ".search" %></span>
        <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div>
<%= link_to t(".add_category"), new_admin_category_path, remote: true,
  class: "btn btn-primary btn-add-category" %>
</div>
<div class="col-md-10 col-md-offset-1">
  <div class="table-responsive table-condensed">
    <table class="table table-hover th_word bg-table" id="list_category">
      <tr>
        <th><%= t ".number" %></th>
        <th><%= t ".name" %></th>
        <th><%= t ".description" %></th>
        <th><%= t ".total" %></th>
        <th><%= t ".action" %></th>
      </tr>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>
    <%= will_paginate %>
  </div>
</div>
<%= form_tag admin_categories_path , method: :post,
  id: "add-category-form" do %>
  <div id="category-modal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h3><%= t".add_category" %></h3>
        </div>
        <div class="modal-body">
          <form role="form">
            <div>
              <label><%= t ".name" %></label>
              <%= text_field_tag :name, params[:name], class: "form-control" %>
            </div>
            <div>
              <label><%= t ".description" %></label>
              <%= text_area_tag :description, params[:description],
                class: "form-control" %>
            </div>
            <%= submit_tag t(".add"), class: "btn btn-success btn-block"%>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-danger"
              data-dismiss="modal">
              <%= t ".cancel" %>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
<% end %>
