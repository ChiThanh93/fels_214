<% provide :title, t(".all_words") %>
<h1><%= t ".all_words" %></h1>
<div class="row">
  <div class="search-form">
    <%= form_tag words_path, method: :get, id: "search-form" do %>
      <div class="row">
        <div class="col-sm-3">
          <%= select_tag :category, options_for_select(@category.collect{|category|
           [category.name, category.id]}), class: "form-control" %>
        </div>
        <div class="col-sm-3">
          <%= select_tag :status, options_for_select(Settings.word.filter), class: "form-control" %>
        </div>
        <div class="col-sm-3">
          <%= text_field_tag :search, params[:search],
            placeholder: t(".search"), class: "form-control search-field-content" %>
        </div>
        <div class="input-group-btn search-btn col-sm-3">
          <%= button_tag type: "submit", class: "btn btn-primary" do %>
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
            <span class="label-icon"><%= t ".search" %></span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="col-md-10 col-md-offset-1">
  <div class="table-responsive table-condensed">
    <table class="table table-hover th_word bg-table" id="list_category">
      <tr>
        <th><%= t ".number" %></th>
        <th><%= t ".category" %></th>
        <th><%= t ".word_content" %></th>
      </tr>
      <tbody>
        <%= render @words %>
      </tbody>
    </table>
  </div>
</div>
